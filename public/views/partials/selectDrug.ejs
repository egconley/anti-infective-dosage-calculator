<form id="selectDrugFrom" action="/postDrug" method="POST">
  <select name="drugs">
    <% if (selectedDrugKey) { %>
    <% console.log('selected drug value available!!', selectedDrugKey); %>
    <option value="selectedDrugKey"><%= selectedDrugKey %></option>
    <% } %>
    <% for(var i=0; i < drugArrayKey.length; i++) { %>
    <option value="<%= drugArrayKey[i].drug_name %>"><%= drugArrayKey[i].drug_name %></option>
    <% } %>
  </select>
  <input type="submit" value="submit" />
</form>